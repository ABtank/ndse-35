<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="row mb-3">
      <label for="inputTitle" class="col-sm-2 col-form-label">Заголовок</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputTitle" value="<%= book.title %>" name="title">
      </div>
    </div>
    <div class="row mb-3">
      <label for="inputAuthors" class="col-sm-2 col-form-label">Authors</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputAuthors" value="<%= book.authors %>" name="authors">
      </div>
    </div>
    <%# if(!book.fileName) { %>
        <div class="row mb-3">
            <label for="inputFileBook" class="col-sm-2 col-form-label">Загрузить другой файл</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="inputFileBook" name="fileBook">
                <% if(book.fileName) { %>
                    <a class="btn btn-link" href="/api/books/<%= book.id %>/download">Скачать <%= book.fileName %></a>
                    <% } %>
            </div>
            
        </div>
   <%# } %>
    <div class="row mb-3">
      <label for="inputDescription" class="col-sm-2 col-form-label">Описание</label>
      <div class="col-sm-10">
        <textarea rows="5" name="description" class="form-control" id="inputDescription"><%= book.description %></textarea>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-10 offset-sm-2">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="favorite" id="inputFavorite" value="1" <%= book.favorite ? 'checked':'' %>>
          <label class="form-check-label" for="inputFavorite">
            Favorite
          </label>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    
  </form>